@model IEnumerable<StudentManager.Models.Major>

@{
    ViewData["Title"] = "Index";
}

<h4>Student Majors</h4>
<hr />


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MajorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                <a asp-action="AddOrEditMajor" class="btn btn-outline-success">New Major</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MajorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                <a asp-controller="Student" asp-action="Index" asp-route-majorId="@item.MajorId">Show Students</a>
            </td>
            <td>
                <a asp-action="AddOrEditMajor" asp-route-id="@item.MajorId">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.MajorId" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this major?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>