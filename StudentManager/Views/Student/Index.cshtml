@model IEnumerable<StudentManager.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h4>Students</h4>
<hr />


<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Major)
            </th>
            <th>
                <a asp-action="AddOrEditStudent" class="btn btn-outline-success">New Student</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolYear)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Major)
            </td>
            <td>
                <a asp-action="AddOrEditStudent" asp-route-id="@item.StudentId">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.StudentId" class="text-danger ml-1" onclick="return confirm('Are you sure to delete this student?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>